{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "ES2015",
    "sourceMap": false,
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "build/compiled-esm",
    "noEmitOnError": true,
    "declaration": false
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-esm"
  ]
}